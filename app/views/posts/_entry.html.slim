.post.entry
  .title
    - if post.url.present?
      = link_to post.title, post.url, target: '_blank', class: 'title', rel: "nofollow"
      '
      span.host= "[#{fetch_url_host(post.url)}]"
    - else
      = link_to post.title, post_path(post.id)
    span.tag_list
      '
      - post.tag_list.each do |tag_name|
        span.tagging
          = link_to tag_name, tag_url(tag_name)
        '
  .info
    span.created_at
      = link_to post_path(post.id) do
        = l post.created_at, format: :long 
      '
    span.author
      'by
      span.username= post.user.try(:username)
